<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/tmb_result_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Clique no botÃ£o para calcular a TMB"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp"/>

    <Button
        android:id="@+id/calculate_tmb_bt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Calcular TMB"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/tmb_result_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/ideal_weight_bt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Quero descobrir meu peso ideal!"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/calculate_tmb_bt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/back_bt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Voltar"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
