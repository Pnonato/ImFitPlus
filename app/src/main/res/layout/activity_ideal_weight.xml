<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IdealWeight">

    <TextView
        android:id="@+id/idealWeight_result_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Clique no botÃ£o para calcular o Peso Ideal"
        android:textAlignment="center"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/calculate_idealWeight_bt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/calculate_idealWeight_bt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Calcular Peso Ideal"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/idealWeight_result_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/back_bt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Voltar"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>